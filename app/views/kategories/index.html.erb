<h1>Kategorie</h1>

<%= link_to "Nowa kategoria", new_kategory_path, class:'btn btn-primary' %>
<br><br>
<p>Ilość kategorii: <%= @kategorie.size %></p>

<table class="table table-hover">
  <tr>
    <th>Pozycja</th>
    <th>Nazwa</th>
    <th>Nadkategoria</th>
    <th>Akcje</th>

  </tr>
  <% @kategorie.each do |kategoria| %>
  <tr>
    <td><%= kategoria.id %></td>
    <td><%= kategoria.nazwa_kategorii %></td>
    <td><%= kategoria.parent_id %></td>
    <td>
      <%= link_to "Pokaż", kategory_path(kategoria), class:'btn btn-success' %>
      <%= link_to "Edytuj", edit_kategory_path(kategoria), class:'btn btn-primary' %>
      <%= link_to "Usuń", kategoria, method: :delete, data: { confirm: 'Jesteś pewny?' }, class:'btn btn-danger' %>
    </td>
  </tr>
  <% end %>
</table>
