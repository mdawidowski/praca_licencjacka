<h1>Aukcje</h1>

<%= link_to "Nowa aukcja", new_aukcje_path, class:'btn btn-primary' %>
<br><br>
<p>Ilość aukcji: <%= @aukcje.size %></p>

<table class="table table-hover">
  <tr>
    <th>Kategoria</th>
    <th>Pozycja</th>
    <th>Nazwa</th>
    <th>Cena początkowa</th>
    <th>Cena aktualna</th>
    <th>Czas do końca</th>
    <th>Akcje</th>
  </tr>
  <% @aukcje.each do |aukcja| %>
  <tr>
    <td><%= aukcja.kategorie_id %></td>
    <td><%= aukcja.id %></td>
    <td><%= aukcja.nazwa %></td>
    <td><%= aukcja.cena_startowa %></td>
    <td><%= aukcja.cena_aktualna %></td>
    <td><%= aukcja.data_zakonczenia %></td>
    <td>
      <%= link_to "Pokaż", aukcje_path(aukcja), class:'btn btn-success' %>
      <%= link_to "Edytuj", edit_aukcje_path(aukcja), class:'btn btn-primary' %>
      <%= link_to "Usuń", aukcja, method: :delete, data: { confirm: 'Jesteś pewny?' }, class:'btn btn-danger' %>
    </td>
  </tr>
  <% end %>
</table>
