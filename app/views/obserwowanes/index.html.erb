<h2>Aktualnie obserwujesz:</h2>
<table class="table table-hover">
    <tr>
        <th>Numer aukcji</th>
        <th>Miniatura</th>
        <th>Nazwa aukcji</th>
        <th>Cena aktualna</th>
        <th>Akcje</th>
    </tr>
    <% @obserwowane.each do |obserwowane| %>
    <% @aukcje.each do |aukcja| %>
    <tr>
          <% if obserwowane.aukcje_id == aukcja.id %>
          <td><%= obserwowane.aukcje_id %></td>
          <td><%= image_tag aukcja.image.url(:thumb) %></td>
          <td>
            <a href="<%= aukcje_path(aukcja) %>"><%= aukcja.nazwa %></a>
        </td>
        <td><%= aukcja.cena_aktualna %></td>
        <td><%= link_to "Przestań obserwować", obserwowane, method: :delete, class:'btn btn-primary' %></td>
        <% end %>
    </tr>
    <% end %>
    <% end %>
</table>
<%= link_to "Wróć", :back, class: "btn btn-success" %>
